<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_menu" tools:context="com.upc.menu.Menu"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Ticket de Atención"
            android:id="@+id/btnCTA"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_green_light"
            android:layout_margin="10dp"
            android:onClick="irConsultarTicket" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="CONSULTAR ORDEN DE ATENCIÓN"
            android:id="@+id/btnCOA"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_green_light"
            android:layout_margin="10dp"
            android:onClick="irConsultarOrdenAtencion" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="GENERAR ORDEN DE ATENCIÓN"
            android:id="@+id/btnGOA"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_green_light"
            android:layout_margin="10dp"
            android:onClick="irGenerarOrdenAtencion" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALIR"
            android:id="@+id/button8"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/background_light"
            android:background="@android:color/holo_red_dark"
            android:layout_margin="10dp"
            android:onClick="regresar" />

    </LinearLayout>
</RelativeLayout>
