<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_interrupcion" tools:context="com.upc.interrupcion.Interrupcion"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CARGANDO..."
                android:layout_gravity="center_horizontal"
                android:id="@+id/textViewInterrupciones"
                android:textColor="@android:color/background_light"
                android:background="@android:color/holo_green_light"
                android:layout_margin="10dp"
                android:textAlignment="center" />

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="246dp"
                android:id="@+id/listViewInterrupciones" />
        </LinearLayout>


        <Button
            android:background="@drawable/button"
            android:id="@+id/button5"
            android:text="CONSULTAR CUADRILLAS DISPONIBLES"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/button_text" />

        <Button
            android:background="@drawable/button"
            android:id="@+id/button10"
            android:text="REGRESAR"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/button_text"
            android:onClick="regresar"/>
